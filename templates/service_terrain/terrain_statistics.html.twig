{% extends 'back.html.twig' %}

{% block title %}Statistiques des terrains par type{% endblock %}

{% block body %}
    <h1 class="text-center mb-4">Statistiques des terrains par type</h1>
    
    <div style="width: 300px; margin: auto;">
        <canvas id="terrainChart" width="300" height="300"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('terrainChart').getContext('2d');
        var data = {
            labels: {{ dataForChart.labels|json_encode|raw }},
            datasets: [{
                label: 'Nombre de terrains par type',
                data: {{ dataForChart.data|json_encode|raw }},
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        };
        var options = {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        };
        var terrainChart = new Chart(ctx, {
            type: 'pie',
            data: data,
            options: options
        });
    </script>
{% endblock %}
