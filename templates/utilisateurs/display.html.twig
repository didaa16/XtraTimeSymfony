{% extends 'home/front.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block st %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
        body {
            margin-top: 20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }

        .main-body {
            padding: 15px;
        }

        .progress-wrapper {
            margin-bottom: 20px;
            position: relative;
        }

        .progress {
            height: 10px;
            border-radius: 5px;
            overflow: hidden;
        }

        .progress-bar {
            transition: width 0.5s ease-in-out;
        }

        .check-icon {
            position: absolute;
            top: 50%;
            right: 0;
            transform: translateY(-50%);
        }
    </style>
{% endblock %}

{% block body %}
    <body>
    <br><br>

    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="progress-wrapper">
                        <div class="progress mb-3">
                            {% set totalFields = 11 %}
                            {% set filledFields = 0 %}
                            {% if app.user.pseudo is not null %}{% set filledFields = filledFields + 1 %}{% endif %}
                            {% if app.user.roles is not null %}{% set filledFields = filledFields + 1 %}{% endif %}
                            {% if app.user.password is not null %}{% set filledFields = filledFields + 1 %}{% endif %}
                            {% if app.user.cin is not null %}{% set filledFields = filledFields + 1 %}{% endif %}
                            {% if app.user.nom is not null %}{% set filledFields = filledFields + 1 %}{% endif %}
                            {% if app.user.prenom is not null %}{% set filledFields = filledFields + 1 %}{% endif %}
                            {% if app.user.age is not null %}{% set filledFields = filledFields + 1 %}{% endif %}
                            {% if app.user.numTel is not null %}{% set filledFields = filledFields + 1 %}{% endif %}
                            {% if app.user.email is not null %}{% set filledFields = filledFields + 1 %}{% endif %}
                            {% if app.user.isVerified == 1 %}{% set filledFields = filledFields + 1 %}{% endif %}
                            {% if app.user.pictureUrl is not null %}{% set filledFields = filledFields + 1 %}{% endif %}

                            {% if filledFields == totalFields %}
                                {% set progress = 100 %}
                            {% else %}
                                {% set progress = ((filledFields / totalFields) * 100) | round %}
                            {% endif %}
                            <div class="progress-bar bg-primary" role="progressbar" style="width: {{ progress }}%" aria-valuenow="{{ progress }}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-right">
                    {% if progress == 100 %}
                        <h6 style="margin-top: 10px; margin-right: 75px;">Congratulations! Your account is now 100% secure</h6>
                        <span class="check-icon text-success" style="display: inline-block;">
                            <svg id="Layer_1" style="height: 60px; width: 60px; margin-top: -50px;" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 106.11 122.88">
                                <defs>
                                    <style>.cls-1{fill:#333;}.cls-1,.cls-2,.cls-3{fill-rule:evenodd;}.cls-2{fill:#fff;}.cls-3{fill:#3aaf3c;}</style>
                                </defs>
                                <title>safe</title>
                                <path class="cls-1" d="M56.36,2.44A104.34,104.34,0,0,0,79.77,13.9a48.25,48.25,0,0,0,19.08,2.57l6.71-.61.33,6.74c1.23,24.79-2.77,46.33-11.16,63.33C86,103.6,72.58,116.37,55.35,122.86l-4.48,0c-16.85-6.15-30.16-18.57-39-36.47C3.63,69.58-.61,47.88.07,22l.17-6.65,6.62.34A64.65,64.65,0,0,0,28.23,13.5,60.41,60.41,0,0,0,48.92,2.79L52.51,0l3.85,2.44Z"/>
                                <path class="cls-2" d="M52.89,7.91c17.38,11,33.07,16.22,46.55,15,2.35,47.59-15.22,82.18-46.37,93.9C23,105.83,5.21,72.45,6.53,22.18,22.34,23,37.86,19.59,52.89,7.91Z"/>
                                <path class="cls-3" d="M52.92,16.31C67.39,25.48,80.46,29.82,91.68,28.8c2,39.63-12.68,69.83-38.61,79.6C28,99.26,13.2,70.06,14.3,28.2c13.17.69,26.1-2.16,38.62-11.89Z"/>
                                <path class="cls-2" d="M37.13,49.73H40v-2a13.73,13.73,0,0,1,3.82-9.54,12.7,12.7,0,0,1,18.52,0,13.77,13.77,0,0,1,3.82,9.54v2H69a2.14,2.14,0,0,1,2.14,2.13V78.77A2.14,2.14,0,0,1,69,80.9H37.13A2.13,2.13,0,0,1,35,78.77V51.86a2.13,2.13,0,0,1,2.13-2.13ZM48.76,64.89a14.8,14.8,0,0,1,1.51,1.46A59.7,59.7,0,0,1,55,59.81c4.68-5.66,2.56-4.57,9.06-4.57l-.91,1a64.73,64.73,0,0,0-6,8A94.44,94.44,0,0,0,51,74.38l-.56,1.09-.52-1.11a26.94,26.94,0,0,0-3.46-5.6,18.68,18.68,0,0,0-4.4-4c.85-2.78,4.88-1.36,6.68.17ZM44,49.73H62.09v-2A9.73,9.73,0,0,0,59.41,41a8.69,8.69,0,0,0-12.72,0A9.73,9.73,0,0,0,44,47.74v2Z"/>
                            </svg>
                        </span>

                    {% else %}
                        <span class="text-primary" style="color: green">{{ progress }}% Complete your profile to strengthen your account security!</span>
                    {% endif %}
                </div>

            </div>
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <br>
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="{{ path('app_utilisateurs_profile_pic', {'filename': app.user.pictureUrl|split('/')|last}) }}" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>{{ app.user.pseudo }}</h4>
                                    <p class="text-secondary mb-1">{{ app.user.nom ~' '~app.user.prenom }}</p>
                                    {% for role in app.user.roles %}
                                        <p class="text-muted font-size-sm">{% if not loop.last %}{{ app.user.roles | join(', ') }}{% endif %}</p>
                                    {% endfor %}
                                    <div class="mt-3">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <form id="profile-picture-form" action="{{ path('update_profile_picture', {'id': app.user.id}) }}" method="POST" enctype="multipart/form-data">
                                                    <input type="file" id="profile-picture-input" name="profile_picture" style="display: none;" onchange="document.getElementById('profile-picture-form').submit();">
                                                    <label for="profile-picture-input" class="btn btn-primary btn-block">Update Picture</label>
                                                </form>
                                            </div>
                                            <div class="col-md-6">
                                                <form action="{{ path('delete_profile_picture', {'id': app.user.id}) }}" method="POST">
                                                    <button type="submit" class="btn btn-outline-primary btn-block">Delete Picture</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                    </div>
                    <br><br>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <a href="{{ path('modifier_pass_utilisateur', {'id': app.user.id}) }}">
                                    <button type="submit" class="btn btn-outline-primary btn-block" style="font-size: 16px; margin-left: 2px"> <i class="fa fa-gear"></i> Confidentiality </button>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <br>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <br>
                            <div class="row" style="margin-left: 2px">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">First Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ app.user.nom}}
                                </div>
                            </div>
                            <hr>
                            <div class="row" style="margin-left: 2px">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Last Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{app.user.prenom }}
                                </div>
                            </div>
                            <hr>
                            <div class="row" style="margin-left: 2px">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ app.user.email }}
                                </div>
                            </div>
                            <hr>
                            <div class="row" style="margin-left: 2px">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Age</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ app.user.age }}
                                </div>
                            </div>
                            <hr>
                            <div class="row" style="margin-left: 2px">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    (216){{ app.user.numTel }}
                                </div>
                            </div>
                            <hr>
                            <div class="row" style="margin-left: 2px">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">CIN</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ app.user.cin }}
                                </div>
                            </div>
                            <hr>
                            <a href="{{ path('modifier_utilisateur', {'id': app.user.id})}}">
                                <button class="btn btn-primary" style="margin-left: 45%">Edit Profile</button>
                            </a>
                            <br><br>
                        </div>
                    </div>
                    <br><br>
                </div>
            </div>
        </div>
    </div>
    {{ parent() }}
    <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">
    </script>
    </body>
{% endblock %}
